package quiz01;

class Solution {
    public String solution(String my_string, int m, int c) {
        String answer = "";
        String[] arr = my_string.split("");
        
        for(int i =c; i< arr.length; i=i+m) {
        	
        	answer += arr[i];
        	
        }
        
        
        
        
        
        
        
        
        return answer;
    }
}








	
	
